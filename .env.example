# .env.example

# Debug mode for detailed logging (true/false)
DEBUG=false

# API key for securing endpoints
API_KEY=your_api_key_here

# Port the server listens on
PORT=9090

# Default voice model for text-to-speech
DEFAULT_VOICE=af_bella

# Path to the ONNX model file
# Example: MODEL_PATH=./models/kokoro/kokoro-v0_19.onnx
MODEL_PATH=./models/kokoro/kokoro-v0_19.onnx

# Path to the directory containing voicepack files (.pt)
# Example: VOICE_PATH=./models/kokoro/voices
VOICE_PATH=./models/kokoro/voices

OUTPUT_DIR=/tmp/

# Enforce API key validation (true/false)
REQUIRE_API_KEY=true

# NVIDIA GPU driver configuration
GPU_DRIVER=nvidia

# Audio format MIME types (optional, advanced use case)
# Example: AUDIO_FORMAT_MIME_TYPES='{"mp3": "audio/mpeg", "opus": "audio/ogg", "aac": "audio/aac", "flac": "audio/flac", "wav": "audio/wav", "pcm": "audio/L16"}'
# AUDIO_FORMAT_MIME_TYPES='{"mp3": "audio/mpeg", "opus": "audio/ogg", "aac": "audio/aac", "flac": "audio/flac", "wav": "audio/wav", "pcm": "audio/L16"}'
